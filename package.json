{
  "name": "puzzlegame",
  "version": "1.0.0",
  "type": "module",
  "main": "index.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:client": "esbuild public/client.ts --bundle --outfile=public/client.js --platform=browser",
    "build:client:watch": "esbuild public/client.ts --bundle --outfile=public/client.js --platform=browser --watch",
    "dev": "npm run build:client && node --watch --experimental-transform-types index.ts",
    "start": "npm run build:client && node --experimental-transform-types index.ts"
  },
  "dependencies": {
    "express": "^5.1.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "esbuild": "^0.27.0"
  }
}
